<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_pop_conner">

    <EditText
        android:id="@+id/et_pop_changpin_currentPin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:hint="@string/qs_item_pin_code"
        android:inputType="numberPassword"
        android:maxLength="8"
        android:paddingEnd="@dimen/dimen_10dip"
        android:paddingStart="@dimen/dimen_10dip"
        android:textColor="@color/mg_blue"
        app:layout_heightPercent="7%sh"
        app:layout_marginTopPercent="3%sh"
        app:layout_textSizePercent="2.5%sh"
        app:layout_widthPercent="72%sw" />

    <View
        android:id="@+id/v_pop_changpin_split1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dip"
        android:layout_below="@id/et_pop_changpin_currentPin"
        android:layout_centerHorizontal="true"
        android:background="@color/mg_blue"
        app:layout_widthPercent="72%sw" />

    <EditText
        android:id="@+id/et_pop_changpin_newPin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_pop_changpin_split1"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:hint="@string/puk_new_pin_label"
        android:inputType="numberPassword"
        android:maxLength="8"
        android:paddingEnd="@dimen/dimen_10dip"
        android:paddingStart="@dimen/dimen_10dip"
        android:textColor="@color/mg_blue"
        app:layout_heightPercent="7%sh"
        app:layout_marginTopPercent="2%sh"
        app:layout_textSizePercent="2.5%sh"
        app:layout_widthPercent="72%sw" />

    <View
        android:id="@+id/v_pop_changpin_split2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dip"
        android:layout_below="@id/et_pop_changpin_newPin"
        android:layout_centerHorizontal="true"
        android:background="@color/mg_blue"
        app:layout_widthPercent="72%sw" />

    <EditText
        android:id="@+id/et_pop_changpin_confirmPin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v_pop_changpin_split2"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:hint="@string/puk_confirm_pin_label"
        android:inputType="numberPassword"
        android:maxLength="8"
        android:paddingEnd="@dimen/dimen_10dip"
        android:paddingStart="@dimen/dimen_10dip"
        android:textColor="@color/mg_blue"
        app:layout_heightPercent="7%sh"
        app:layout_marginTopPercent="2%sh"
        app:layout_textSizePercent="2.5%sh"
        app:layout_widthPercent="72%sw" />

    <View
        android:id="@+id/v_pop_changpin_split3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dip"
        android:layout_below="@id/et_pop_changpin_confirmPin"
        android:layout_centerHorizontal="true"
        android:background="@color/mg_blue"
        app:layout_widthPercent="72%sw" />

    <TextView
        android:id="@+id/tv_pop_changpin_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/v_pop_changpin_split3"
        android:layout_below="@id/v_pop_changpin_split3"
        android:gravity="center"
        android:text="@string/cancel"
        app:layout_heightPercent="7%sh"
        app:layout_marginTopPercent="3%sh"
        app:layout_textSizePercent="2.7%sh"
        app:layout_widthPercent="40%sw" />

    <TextView
        android:id="@+id/tv_pop_changpin_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/v_pop_changpin_split3"
        android:layout_below="@id/v_pop_changpin_split3"
        android:gravity="center"
        android:text="@string/ok"
        android:textColor="@color/mg_blue"
        app:layout_heightPercent="7%sh"
        app:layout_marginTopPercent="3%sh"
        app:layout_textSizePercent="2.7%sh"
        app:layout_widthPercent="40%sw" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_pop_changpin_ok"
        app:layout_marginTopPercent="3%sh" />

</com.zhy.android.percent.support.PercentRelativeLayout>
