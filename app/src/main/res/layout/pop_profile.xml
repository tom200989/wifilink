<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/bg_pop_conner"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginEnd="@dimen/dimen_10dip"
        android:layout_marginStart="@dimen/dimen_10dip"
        android:id="@+id/tv_pop_profile_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/to_edit_profile_go_to_settings_about_web_manager"
        android:textColor="@color/mg_blue"
        app:layout_marginTopPercent="3%sh"
        app:layout_textSizePercent="2.5%sh" />

    <TextView
        android:id="@+id/tv_pop_profile_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_pop_profile_des"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/cancel"
        app:layout_marginTopPercent="5%sh"
        app:layout_textSizePercent="3%sh" />

</com.zhy.android.percent.support.PercentRelativeLayout>
