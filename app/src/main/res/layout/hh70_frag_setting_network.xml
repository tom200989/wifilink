<?xml version="1.0" encoding="utf-8"?>
<com.hiber.tools.layout.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_normal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:ignore="ContentDescription,RelativeOverlap,UselessParent,TooManyViews">

    <!-- banner -->
    <com.hiber.tools.layout.PercentRelativeLayout
        android:id="@+id/rl_settingNetwork_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_title_background"
        app:layout_heightPercent="9%h">

        <ImageView
            android:id="@+id/iv_settingnetwork_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/back"
            app:layout_heightPercent="50%h"
            app:layout_widthPercent="50%h" />

        <TextView
            android:id="@+id/tv_setnetwork_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/setting_mobile_network"
            android:textColor="@color/white"
            app:layout_textSizePercent="30%h" />

        <TextView
            android:id="@+id/tv_setnetwork_done"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            android:text="@string/done"
            android:textColor="@color/white"
            android:visibility="gone"
            app:layout_textSizePercent="25%h" />

    </com.hiber.tools.layout.PercentRelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_settingNetwork_banner"
        android:orientation="vertical">

        <com.hiber.tools.layout.PercentLinearLayout
            android:id="@+id/ll_mobile_network"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.hiber.tools.layout.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.hiber.tools.layout.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        style="@style/WlanSettingTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_white"
                        android:gravity="center_vertical"
                        android:padding="@dimen/setting_padding_10_dp"
                        android:text="@string/usage_setting_mobile_data"
                        android:textDirection="locale" />

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/network_mobile_data_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_0_5dip"
                        android:layout_alignParentBottom="true"
                        android:background="@color/grey_line"
                        android:textDirection="locale" />
                </com.hiber.tools.layout.PercentRelativeLayout>

                <com.hiber.tools.layout.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@color/color_white">

                    <TextView
                        style="@style/WlanSettingTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:padding="@dimen/setting_padding_10_dp"
                        android:text="@string/setting_network_connect_mode"
                        android:textDirection="locale" />

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/spinner_connection_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:entries="@array/settings_connection_mode"
                        android:spinnerMode="dialog"
                        android:textDirection="locale" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_0_5dip"
                        android:layout_alignParentBottom="true"
                        android:background="@color/grey_line"
                        android:textDirection="locale" />
                </com.hiber.tools.layout.PercentRelativeLayout>

                <com.hiber.tools.layout.PercentRelativeLayout
                    android:id="@+id/relativelayout_network_roaming"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        style="@style/WlanSettingTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_white"
                        android:gravity="center_vertical"
                        android:padding="@dimen/setting_padding_10_dp"
                        android:text="@string/usage_setting_roaming"
                        android:textDirection="locale" />

                    <ImageView
                        android:id="@+id/network_roaming_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/pwd_switcher_off"
                        android:textDirection="locale"
                        app:layout_heightPercent="32.5%h"
                        app:layout_marginRightPercent="2%w"
                        app:layout_widthPercent="65%h" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_0_5dip"
                        android:layout_alignParentBottom="true"
                        android:background="@color/grey_line"
                        android:textDirection="locale" />
                </com.hiber.tools.layout.PercentRelativeLayout>

                <com.hiber.tools.layout.PercentRelativeLayout
                    android:id="@+id/network_set_data_plan"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        style="@style/WlanSettingTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_white"
                        android:gravity="center_vertical"
                        android:padding="@dimen/setting_padding_10_dp"
                        android:text="@string/setting_set_data_plan"
                        android:textDirection="locale" />

                    <ImageView
                        android:id="@+id/network_set_data_plan_arrow"
                        android:layout_width="@dimen/dimen_20dip"
                        android:layout_height="@dimen/dimen_20dip"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dimen_10dip"
                        android:src="@drawable/right_arrow_big"
                        android:textDirection="locale" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/network_set_data_plan_arrow"
                        android:textColor="@color/color_light_gray"
                        android:textDirection="locale"
                        android:textSize="12sp" />
                </com.hiber.tools.layout.PercentRelativeLayout>

                <com.hiber.tools.layout.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/color_white">

                    <TextView
                        style="@style/WlanSettingTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:padding="@dimen/setting_padding_10_dp"
                        android:text="@string/setting_network_mode"
                        android:textDirection="locale" />

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/settings_network_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:entries="@array/settings_network_mode"
                        android:spinnerMode="dialog"
                        android:textDirection="locale" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_0_5dip"
                        android:layout_alignParentBottom="true"
                        android:background="@color/grey_line"
                        android:textDirection="locale" />
                </com.hiber.tools.layout.PercentRelativeLayout>

                <com.hiber.tools.layout.PercentRelativeLayout
                    android:id="@+id/relativelayout_network_profile"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        style="@style/WlanSettingTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_white"
                        android:gravity="center_vertical"
                        android:padding="@dimen/setting_padding_10_dp"
                        android:text="@string/profile"
                        android:textDirection="locale" />

                    <ImageView
                        android:id="@+id/network_selected_profile_arrow"
                        android:layout_width="@dimen/dimen_20dip"
                        android:layout_height="@dimen/dimen_20dip"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dimen_10dip"
                        android:src="@drawable/right_arrow_big"
                        android:textDirection="locale" />

                    <TextView
                        android:id="@+id/textview_network_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/network_selected_profile_arrow"
                        android:textColor="@color/color_light_gray"
                        android:textDirection="locale"
                        android:textSize="12sp" />
                </com.hiber.tools.layout.PercentRelativeLayout>

                <com.hiber.tools.layout.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        style="@style/WlanSettingTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_white"
                        android:gravity="center_vertical"
                        android:padding="@dimen/setting_padding_10_dp"
                        android:text="@string/qs_hint_sim_pin"
                        android:textDirection="locale" />

                    <android.support.v7.widget.SwitchCompat
                        android:id="@+id/network_sim_pin_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:textDirection="locale" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_0_5dip"
                        android:layout_alignParentBottom="true"
                        android:background="@color/grey_line"
                        android:textDirection="locale" />
                </com.hiber.tools.layout.PercentRelativeLayout>

                <com.hiber.tools.layout.PercentRelativeLayout
                    android:id="@+id/network_change_pin"
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        style="@style/WlanSettingTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_white"
                        android:gravity="center_vertical"
                        android:padding="@dimen/setting_padding_10_dp"
                        android:text="@string/change_pin"
                        android:textDirection="locale" />

                    <ImageView
                        android:id="@+id/network_change_pin_arrow"
                        android:layout_width="@dimen/dimen_20dip"
                        android:layout_height="@dimen/dimen_20dip"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dimen_10dip"
                        android:src="@drawable/right_arrow_big"
                        android:textDirection="locale" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@id/network_change_pin_arrow"
                        android:textColor="@color/color_light_gray"
                        android:textDirection="locale"
                        android:textSize="12sp" />
                </com.hiber.tools.layout.PercentRelativeLayout>

                <com.hiber.tools.layout.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        style="@style/WlanSettingTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_white"
                        android:gravity="center_vertical"
                        android:padding="@dimen/setting_padding_10_dp"
                        android:text="@string/setting_sim_number"
                        android:textDirection="locale" />

                    <TextView
                        android:id="@+id/textview_sim_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="end"
                        android:layout_marginEnd="@dimen/dimen_10dip"
                        android:textColor="@color/color_light_gray"
                        android:textDirection="locale"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_0_5dip"
                        android:layout_alignParentBottom="true"
                        android:background="@color/grey_line"
                        android:textDirection="locale" />
                </com.hiber.tools.layout.PercentRelativeLayout>

                <com.hiber.tools.layout.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        style="@style/WlanSettingTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_white"
                        android:gravity="center_vertical"
                        android:padding="@dimen/setting_padding_10_dp"
                        android:text="@string/setting_imsi"
                        android:textDirection="locale" />

                    <TextView
                        android:id="@+id/textview_network_imsi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/dimen_10dip"
                        android:textColor="@color/color_light_gray"
                        android:textDirection="locale"
                        android:textSize="12sp" />
                </com.hiber.tools.layout.PercentRelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0_5dip"
                    android:layout_marginTop="@dimen/dimen_1dip"
                    android:background="@color/main_bottom_divider"
                    android:contentDescription="@string/setting_network"
                    android:textDirection="locale" />

            </com.hiber.tools.layout.PercentLinearLayout>
        </com.hiber.tools.layout.PercentLinearLayout>
    </ScrollView>

    <!-- data plan -->
    <com.hiber.tools.layout.PercentLinearLayout
        android:id="@+id/sett_data_plan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_settingNetwork_banner"
        android:background="@color/color_bg_normal"
        android:orientation="vertical"
        android:visibility="gone">

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/rl_monthly_data_plan"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white">

            <TextView
                style="@style/WlanSettingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/setting_padding_10_dp"
                android:text="@string/usage_setting_monthlysataplan"
                android:textDirection="locale" />

            <ImageView
                android:id="@+id/img_monthly_data_plan"
                android:layout_width="@dimen/dimen_20dip"
                android:layout_height="@dimen/dimen_20dip"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dimen_10dip"
                android:src="@drawable/right_arrow_big"
                android:textDirection="locale" />

            <TextView
                android:id="@+id/textview_monthly_data_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/img_monthly_data_plan"
                android:textColor="@color/color_light_gray"
                android:textDirection="locale"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0_5dip"
                android:layout_alignParentBottom="true"
                android:background="@color/grey_line"
                android:textDirection="locale" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white">

            <TextView
                style="@style/WlanSettingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/setting_padding_10_dp"
                android:text="@string/usage_setting_billingday"
                android:textDirection="locale" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/setdataplan_billing_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:entries="@array/settings_data_plan_billing_day"
                android:spinnerMode="dialog"
                android:textDirection="locale" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0_5dip"
                android:layout_alignParentBottom="true"
                android:background="@color/grey_line"
                android:textDirection="locale" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white">

            <TextView
                style="@style/WlanSettingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/setting_padding_10_dp"
                android:text="@string/usage_setting_usagealert"
                android:textDirection="locale" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/setdataplan_usagealert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:entries="@array/settings_data_plan_usage_alert"
                android:spinnerMode="dialog"
                android:textDirection="locale" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0_5dip"
                android:layout_alignParentBottom="true"
                android:background="@color/grey_line"
                android:textDirection="locale" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/white">

            <TextView
                style="@style/WlanSettingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/setting_padding_10_dp"
                android:text="@string/auto_disconnect"
                android:textDirection="locale" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/setdataplan_auto_disconnect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textDirection="locale"
                app:showText="false" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <TextView
                style="@style/WlanSettingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="@dimen/setting_padding_10_dp"
                android:text="@string/usage_setting_timelimit"
                android:textDirection="locale" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/setdataplan_timelimit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:checked="true"
                android:textDirection="locale" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_0_5dip"
                android:layout_alignParentBottom="true"
                android:background="@color/grey_line"
                android:textDirection="locale" />
        </com.zhy.android.percent.support.PercentRelativeLayout>

        <com.hiber.tools.layout.PercentLinearLayout
            android:id="@+id/ll_time_limit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.zhy.android.percent.support.PercentRelativeLayout
                android:id="@+id/rl_set_time_limit"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white">

                <TextView
                    style="@style/WlanSettingTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/setting_padding_10_dp"
                    android:text="@string/usage_setting_settimelimit"
                    android:textDirection="locale" />

                <ImageView
                    android:id="@+id/img_set_time_limit"
                    android:layout_width="@dimen/dimen_20dip"
                    android:layout_height="@dimen/dimen_20dip"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dimen_10dip"
                    android:src="@drawable/right_arrow_big"
                    android:textDirection="locale" />

                <TextView
                    android:id="@+id/textview_set_time_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/img_set_time_limit"
                    android:textColor="@color/color_light_gray"
                    android:textDirection="locale"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0_5dip"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey_line"
                    android:textDirection="locale" />
            </com.zhy.android.percent.support.PercentRelativeLayout>

            <com.zhy.android.percent.support.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white">

                <TextView
                    style="@style/WlanSettingTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/setting_padding_10_dp"
                    android:text="@string/auto_disconnect"
                    android:textDirection="locale" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/setdataplan_limit_auto_disaconect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textDirection="locale"
                    app:showText="false" />
            </com.zhy.android.percent.support.PercentRelativeLayout>

        </com.hiber.tools.layout.PercentLinearLayout>
    </com.hiber.tools.layout.PercentLinearLayout>

    <!-- network -->
    <com.hiber.tools.layout.PercentLinearLayout
        android:id="@+id/linear_network_change_pin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_settingNetwork_banner"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.hiber.tools.layout.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:orientation="vertical"
                android:visibility="visible">

                <com.hiber.tools.layout.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/current_sim_pin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_12dip"
                        android:background="@null"
                        android:digits="1234567890"
                        android:hint="@string/current_sim_pin"
                        android:imeOptions="flagNoExtractUi"
                        android:inputType="number"
                        android:maxLength="8"
                        android:paddingTop="@dimen/dimen_12dip"
                        android:paddingBottom="@dimen/dimen_12dip"
                        android:textColor="@color/grey_text"
                        android:textDirection="locale"
                        android:textSize="@dimen/dimen_textsize_16sp"
                        tools:ignore="Autofill,TextFields" />
                </com.hiber.tools.layout.PercentLinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0_5dip"
                    android:layout_marginStart="@dimen/dimen_12dip"
                    android:background="@color/main_bottom_divider"
                    android:contentDescription="@string/setting_account"
                    android:textDirection="locale" />

                <com.hiber.tools.layout.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/new_sim_pin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_12dip"
                        android:background="@null"
                        android:digits="1234567890"
                        android:hint="@string/new_sim_pin"
                        android:imeOptions="flagNoExtractUi"
                        android:inputType="number"
                        android:maxLength="8"
                        android:paddingTop="@dimen/dimen_15dip"
                        android:paddingBottom="15dp"
                        android:textColor="@color/grey_text"
                        android:textDirection="locale"
                        android:textSize="@dimen/dimen_textsize_16sp"
                        tools:ignore="Autofill,TextFields" />
                </com.hiber.tools.layout.PercentLinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0_5dip"
                    android:layout_marginStart="@dimen/dimen_12dip"
                    android:background="@color/main_bottom_divider"
                    android:contentDescription="@string/setting_account"
                    android:textDirection="locale" />

                <com.hiber.tools.layout.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/confirm_new_sim_pin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_12dip"
                        android:layout_weight="1"
                        android:background="@null"
                        android:digits="1234567890"
                        android:hint="@string/confirm_new_sim_pin"
                        android:imeOptions="flagNoExtractUi"
                        android:inputType="number"
                        android:maxLength="8"
                        android:paddingTop="@dimen/dimen_15dip"
                        android:paddingBottom="@dimen/dimen_15dip"
                        android:textColor="@color/grey_text"
                        android:textDirection="locale"
                        android:textSize="@dimen/dimen_textsize_16sp"
                        tools:ignore="Autofill,TextFields" />
                </com.hiber.tools.layout.PercentLinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0_5dip"
                    android:background="@color/main_bottom_divider"
                    android:contentDescription="@string/setting_account"
                    android:textDirection="locale" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/remember_sim_pin"
                    android:textDirection="locale" />

            </com.hiber.tools.layout.PercentLinearLayout>
        </ScrollView>
    </com.hiber.tools.layout.PercentLinearLayout>

    <!-- PIN 弹出 -->
    <com.hiber.tools.layout.PercentRelativeLayout
        android:id="@+id/rl_pop_setttingPin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_settingNetwork_banner"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_pop_setting_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.4"
            android:background="@color/gray" />

        <com.hiber.tools.layout.PercentRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_settingpin"
            app:layout_heightPercent="30%h"
            app:layout_marginTopPercent="15%h"
            app:layout_widthPercent="80%w">

            <EditText
                android:id="@+id/et_pop_setttingpin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_etsettingpin"
                android:hint="@string/enter_sim_pin"
                android:inputType="numberPassword"
                android:maxLength="8"
                android:paddingStart="@dimen/dimen_15dip"
                android:paddingEnd="@dimen/dimen_15dip"
                android:textColor="@color/mg_blue"
                app:layout_heightPercent="25%h"
                app:layout_marginTopPercent="25%h"
                app:layout_textSizePercent="7%h"
                app:layout_widthPercent="90%w"
                tools:ignore="Autofill" />

            <TextView
                android:id="@+id/tv_pop_settingpin_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_pop_setttingpin"
                android:layout_alignEnd="@id/et_pop_setttingpin"
                android:gravity="center"
                android:text="@string/ok"
                android:textColor="@color/mg_blue"
                app:layout_marginTopPercent="15%h"
                app:layout_textSizePercent="10%h"
                app:layout_widthPercent="15%w" />

            <TextView
                android:id="@+id/tv_pop_settingpin_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_pop_setttingpin"
                android:layout_marginEnd="@dimen/dimen_30dip"
                android:layout_toStartOf="@id/tv_pop_settingpin_ok"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/gray"
                app:layout_marginTopPercent="15%h"
                app:layout_textSizePercent="10%h" />
        </com.hiber.tools.layout.PercentRelativeLayout>

    </com.hiber.tools.layout.PercentRelativeLayout>

    <!-- 等待 -->
    <com.alcatel.wifilink.root.widget.HH70_LoadWidget
        android:id="@+id/wd_setting_network_load"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</com.hiber.tools.layout.PercentRelativeLayout>
