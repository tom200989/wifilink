<?xml version="1.0" encoding="utf-8"?>
<com.hiber.tools.layout.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hiber.tools.layout.PercentRelativeLayout
        android:id="@+id/rl_titlebar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/main_title_background">

        <ImageButton
            android:id="@+id/device_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/device_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/hh70_connect_small"
            android:textColor="@color/color_white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/device_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            
            android:layout_centerVertical="true"
            android:text="@string/hh70_Blocked"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </com.hiber.tools.layout.PercentRelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/rl_titlebar"
        android:id="@+id/rcv_deviceconnect"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</com.hiber.tools.layout.PercentRelativeLayout>
