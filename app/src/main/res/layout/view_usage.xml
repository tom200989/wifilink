<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="12dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="12dip">

        <ImageView
            android:id="@+id/home_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:src="@drawable/home_connected_ic_home" />

        <TextView
            android:id="@+id/home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/home_icon"
            android:layout_toRightOf="@+id/home_icon"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/home_network"
            android:textColor="@color/black_text"
            android:textSize="@dimen/dimen_textsize_18sp" />

        <TextView
            android:id="@+id/home_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/home_icon"
            android:layout_alignLeft="@+id/home_title"
            android:layout_alignStart="@+id/home_title"
            android:text="0.00M"
            android:textColor="@color/deep_grey_text"
            android:textSize="@dimen/dimen_textsize_14sp" />

        <TextView
            android:id="@+id/tv_home_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="0h"
            android:textColor="@color/black_text"
            android:textSize="@dimen/dimen_textsize_14sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/grey_line"
        android:paddingBottom="6dip"
        android:paddingTop="6dip" />

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="12dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:paddingTop="12dip">

        <ImageView
            android:id="@+id/roaming_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:src="@drawable/home_connected_ic_roaming" />

        <TextView
            android:id="@+id/roaming_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/roaming_icon"
            android:layout_toRightOf="@+id/roaming_icon"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/usage_setting_roaming"
            android:textColor="@color/black_text"
            android:textSize="@dimen/dimen_textsize_18sp" />

        <TextView
            android:id="@+id/roaming_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/roaming_icon"
            android:layout_alignLeft="@+id/roaming_title"
            android:layout_alignStart="@+id/roaming_title"
            android:text="0.00M"
            android:textColor="@color/deep_grey_text"
            android:textSize="@dimen/dimen_textsize_14sp" />

        <TextView
            android:id="@+id/tv_roaming_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="0h"
            android:textColor="@color/black_text"
            android:textSize="@dimen/dimen_textsize_14sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/bt_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_12dip"
        android:layout_marginRight="@dimen/dimen_12dip"
        android:layout_marginTop="@dimen/dimen_20dip"
        android:background="@drawable/selector_conner_btn_blue"
        android:text="@string/reset_statistics"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_textsize_18sp" />

    <TextView
        android:gravity="center_vertical"
        android:id="@+id/tv_network_settings"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_30dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_20dip"
        android:drawableRight="@drawable/right_arrow_small"
        android:text="@string/mobile_network_settings" />
</LinearLayout>

