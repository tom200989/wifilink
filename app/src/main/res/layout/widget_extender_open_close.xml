<?xml version="1.0" encoding="utf-8"?>
<com.hiber.tools.layout.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hiber.tools.layout.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_extender_open_close_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.7"
            android:background="@color/gray" />

        <com.hiber.tools.layout.PercentRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_pop_conner"
            app:layout_widthPercent="80%w">

            <TextView
                android:id="@+id/iv_extender_open_close_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_10dip"
                android:layout_marginStart="@dimen/dimen_10dip"
                android:text="@string/hh70_open_or_close_extender"
                android:textColor="@color/mg_blue"
                app:layout_marginBottomPercent="3%h"
                app:layout_marginTopPercent="3%h"
                app:layout_textSizePercent="2.3%h" />

            <com.hiber.tools.layout.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_extender_open_close_des"
                android:layout_marginEnd="@dimen/dimen_10dip"
                android:layout_marginStart="@dimen/dimen_10dip"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_heightPercent="15%w">

                <TextView
                    app:layout_textSizePercent="35%h"
                    android:id="@+id/tv_extender_open_close_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/hh70_cancel"
                    android:textColor="@color/gray"
                    app:layout_widthPercent="50%w" />

                <TextView
                    app:layout_textSizePercent="35%h"
                    android:id="@+id/tv_extender_open_close_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/hh70_ok"
                    android:textColor="@color/mg_blue"
                    app:layout_widthPercent="50%w" />

            </com.hiber.tools.layout.PercentLinearLayout>

        </com.hiber.tools.layout.PercentRelativeLayout>

    </com.hiber.tools.layout.PercentRelativeLayout>

</com.hiber.tools.layout.PercentRelativeLayout>
