<?xml version="1.0" encoding="utf-8"?>
<com.hiber.tools.layout.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_normal">

    <com.hiber.tools.layout.PercentRelativeLayout
        android:id="@+id/rl_language_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mg_blue"
        app:layout_heightPercent="9%h">

        <ImageView
            android:id="@+id/tv_language_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/back"
            app:layout_heightPercent="50%h"
            app:layout_widthPercent="50%h" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/language"
            android:textColor="@color/white"
            app:layout_textSizePercent="30%h" />

        <TextView
            android:id="@+id/tv_language_done"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            android:text="@string/done"
            android:textColor="@color/white"
            app:layout_textSizePercent="25%h" />

    </com.hiber.tools.layout.PercentRelativeLayout>

    <!-- 列表 -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/listview_language"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_language_banner"
        android:background="@color/white" />

</com.hiber.tools.layout.PercentRelativeLayout>
