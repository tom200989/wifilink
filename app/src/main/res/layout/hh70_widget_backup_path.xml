<?xml version="1.0" encoding="utf-8"?>
<com.hiber.tools.layout.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hiber.tools.layout.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_backup_path_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="@color/gray" />

        <com.hiber.tools.layout.PercentRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:gravity="center"
            app:layout_heightPercent="30%h"
            app:layout_widthPercent="85%w">

            <EditText
                android:id="@+id/et_backup_path"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:layout_heightPercent="25%h"
                app:layout_textSizePercent="9%h"
                app:layout_widthPercent="90%w" />

            <com.hiber.tools.layout.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_backup_path"
                app:layout_marginTopPercent="15%h">

                <TextView
                    android:id="@+id/tv_backup_path_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/cancel"
                    app:layout_heightPercent="30%h"
                    app:layout_textSizePercent="13%h"
                    app:layout_widthPercent="50%w" />

                <TextView
                    android:id="@+id/tv_backup_path_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:text="@string/backup"
                    android:textAllCaps="false"
                    android:textColor="@color/mg_blue"
                    app:layout_heightPercent="30%h"
                    app:layout_textSizePercent="13%h"
                    app:layout_widthPercent="50%w" />

            </com.hiber.tools.layout.PercentRelativeLayout>

        </com.hiber.tools.layout.PercentRelativeLayout>

    </com.hiber.tools.layout.PercentRelativeLayout>

</com.hiber.tools.layout.PercentRelativeLayout>
