<?xml version="1.0" encoding="utf-8"?>
<com.hiber.tools.layout.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- 灰色背景 -->
    <ImageView
        android:id="@+id/iv_dialogok_widget_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:background="@color/gray" />

    <com.hiber.tools.layout.PercentRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_pop_conner"
        app:layout_widthPercent="75%w"
        app:layout_heightPercent="22%h">

        <!-- titile -->
        <TextView
            android:id="@+id/tv_smsdetail_tryagain_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/hh70_smsdetail_tryagain"
            android:textColor="@color/mg_blue"
            app:layout_marginTopPercent="18.18%h"
            app:layout_textSizePercent="11%h" />

        <!-- split -->
        <View
            android:id="@+id/v_smsdetail_tryagain_split"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dip"
            android:layout_below="@id/tv_smsdetail_tryagain_title"
            android:layout_marginEnd="@dimen/dimen_15dip"
            android:layout_marginStart="@dimen/dimen_15dip"
            android:alpha="0.5"
            android:background="@color/gray"
            app:layout_marginTopPercent="13.64%h" />

        <!-- buttons -->
        <com.hiber.tools.layout.PercentLinearLayout
            android:id="@+id/ll_smsdetail_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_smsdetail_tryagain_split"
            android:orientation="horizontal"
            app:layout_heightPercent="30%h"
            app:layout_marginTopPercent="9.10%h">

            <Button
                android:background="@drawable/btn_click_selector"
                android:id="@+id/tv_smsdetail_tryagain_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/hh70_cancel"
                android:layout_marginEnd="@dimen/dimen_10dip"
                android:layout_marginStart="@dimen/dimen_10dip"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:layout_textSizePercent="36%h"/>

            <Button
                android:layout_marginEnd="@dimen/dimen_10dip"
                android:layout_marginStart="@dimen/dimen_10dip"
                android:textAllCaps="false"
                android:background="@drawable/pop_sim_bg"
                android:id="@+id/tv_smsdetail_tryagain_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/hh70_smsdetail_try_confirm"
                android:textColor="@color/sms_detail_tryagain"
                app:layout_textSizePercent="35%h"/>
        </com.hiber.tools.layout.PercentLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dip"
            android:layout_below="@id/ll_smsdetail_buttons"
            app:layout_marginTopPercent="9.10%h" />

    </com.hiber.tools.layout.PercentRelativeLayout>


</com.hiber.tools.layout.PercentRelativeLayout>
