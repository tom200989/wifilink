<?xml version="1.0" encoding="utf-8"?>
<com.hiber.tools.layout.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_pop_conner">

    <TextView
        android:id="@+id/tv_pop_connMode_auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/dimen_15dip"
        android:paddingStart="@dimen/dimen_15dip"
        android:text="@string/setting_network_mode_auto"
        android:textColor="@color/black"
        app:layout_heightPercent="9%sh"
        app:layout_textSizePercent="3%sh" />

    <TextView
        android:id="@+id/tv_pop_connMode_manual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_pop_connMode_auto"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/dimen_15dip"
        android:paddingStart="@dimen/dimen_15dip"
        android:text="@string/maunal"
        android:textColor="@color/black"
        app:layout_heightPercent="9%sh"
        app:layout_textSizePercent="3%sh" />

</com.hiber.tools.layout.PercentRelativeLayout>
