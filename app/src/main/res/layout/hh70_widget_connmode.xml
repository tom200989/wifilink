<?xml version="1.0" encoding="utf-8"?>
<com.hiber.tools.layout.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <com.hiber.tools.layout.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 灰色背景 -->
        <ImageView
            android:id="@+id/iv_dialogok_widget_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="@color/gray" />

        <!-- 白色底框 -->
        <com.hiber.tools.layout.PercentRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_pop_conner"
            app:layout_widthPercent="75%w">

            <!-- 标题 -->
            <TextView
                android:gravity="center"
                android:id="@+id/tv_pop_connMode_auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/setting_network_mode_auto"
                android:textColor="@color/black"
                app:layout_marginLeftPercent="5%w"
                app:layout_marginRightPercent="5%w"
                app:layout_marginTopPercent="3%h"
                tools:layout_textSizePercent="2.5%h"/>

            <!-- 分割线 -->
            <View
                android:id="@+id/div_connmode"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tv_pop_connMode_auto"
                android:alpha="0.5"
                android:background="@color/gray"
                app:layout_marginLeftPercent="5%w"
                app:layout_marginRightPercent="5%w"
                app:layout_marginTopPercent="3%h" />

            <!-- 描述 -->
            <TextView
                android:id="@+id/tv_pop_connMode_manual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/div_connmode"
                android:layout_centerHorizontal="true"
                android:text="@string/maunal"
                android:gravity="center"
                android:textColor="@color/black_text"
                app:layout_marginLeftPercent="5%w"
                app:layout_marginRightPercent="5%w"
                app:layout_marginTopPercent="3%h"
                tools:layout_textSizePercent="2.5%h"
                app:layout_marginBottomPercent="3%h"
                />

        </com.hiber.tools.layout.PercentRelativeLayout>

    </com.hiber.tools.layout.PercentRelativeLayout>

</com.hiber.tools.layout.PercentRelativeLayout>
