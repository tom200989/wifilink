<?xml version="1.0" encoding="utf-8"?>
<com.hiber.tools.layout.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 设备连接详情界面 -->
    <com.hiber.tools.layout.PercentLinearLayout
        android:id="@+id/rl_login_devices"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible">

        <!-- banner -->
        <com.hiber.tools.layout.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_heightPercent="9%h">

            <!-- 标题 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/mg_blue"
                android:gravity="center"
                android:text="@string/hh70_devices"
                android:textColor="@color/white"
                app:layout_textSizePercent="30%h" />

            <!-- 返回键 -->
            <ImageView
                android:id="@+id/iv_pre_devices_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/back"
                app:layout_heightPercent="50%h"
                app:layout_widthPercent="10%w"
                tools:ignore="ContentDescription" />

        </com.hiber.tools.layout.PercentRelativeLayout>

        <!-- 列表 -->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_pre_devices"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.hiber.tools.layout.PercentLinearLayout>

</com.hiber.tools.layout.PercentRelativeLayout>
