<?xml version="1.0" encoding="utf-8"?>
<com.hiber.tools.layout.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hiber.tools.layout.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backup_name_bg">

        <!-- Banner -->
        <com.hiber.tools.layout.PercentRelativeLayout
            android:id="@+id/rl_about_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mg_blue"
            app:layout_heightPercent="9%h">

            <ImageView
                android:id="@+id/iv_about_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/back"
                app:layout_heightPercent="50%h"
                app:layout_widthPercent="50%h" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/setting_about"
                android:textColor="@color/white"
                app:layout_textSizePercent="30%h" />

        </com.hiber.tools.layout.PercentRelativeLayout>

        <!-- 内容区 -->
        <com.hiber.tools.layout.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rl_about_banner"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/device"
                android:textColor="@color/black_text"
                android:textDirection="locale"
                android:textSize="@dimen/dimen_textsize_16sp" />

            <com.hiber.tools.layout.PercentRelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/setting_item_height"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="@string/device_name"
                    android:textColor="@color/black_text"
                    android:textDirection="locale"
                    android:textSize="@dimen/dimen_textsize_16sp" />

                <TextView
                    android:id="@+id/device_name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/view2"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="12dp"
                    android:gravity="center_vertical"
                    android:text="LINKHUB HH70"
                    android:textDirection="locale"
                    android:textSize="@dimen/dimen_textsize_12sp"
                    tools:ignore="HardcodedText" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/background" />

            </com.hiber.tools.layout.PercentRelativeLayout>

            <com.hiber.tools.layout.PercentRelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/setting_item_height"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="@string/imei"
                    android:textColor="@color/black_text"
                    android:textDirection="locale"
                    android:textSize="@dimen/dimen_textsize_16sp" />

                <TextView
                    android:id="@+id/imei_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="12dp"
                    android:gravity="center_vertical"
                    android:text="LINKHUB HH70"
                    android:textDirection="locale"
                    android:textSize="@dimen/dimen_textsize_12sp"
                    tools:ignore="HardcodedText" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/background" />

            </com.hiber.tools.layout.PercentRelativeLayout>

            <com.hiber.tools.layout.PercentRelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/setting_item_height"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="@string/mac_address"
                    android:textColor="@color/black_text"
                    android:textDirection="locale"
                    android:textSize="@dimen/dimen_textsize_16sp" />

                <TextView
                    android:id="@+id/mac_address_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="12dp"
                    android:gravity="center_vertical"
                    android:text="LINKHUB HH70"
                    android:textDirection="locale"
                    android:textSize="@dimen/dimen_textsize_12sp"
                    tools:ignore="HardcodedText" />

            </com.hiber.tools.layout.PercentRelativeLayout>

            <com.hiber.tools.layout.PercentRelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/setting_item_height"
                android:layout_marginTop="30dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="@string/management_ip_address"
                    android:textColor="@color/black_text"
                    android:textDirection="locale"
                    android:textSize="@dimen/dimen_textsize_16sp" />

                <TextView
                    android:id="@+id/management_ip_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="12dp"
                    android:gravity="center_vertical"
                    android:text="0.0.0.0"
                    android:textDirection="locale"
                    android:textSize="@dimen/dimen_textsize_12sp"
                    tools:ignore="HardcodedText" />

            </com.hiber.tools.layout.PercentRelativeLayout>

            <com.hiber.tools.layout.PercentRelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/setting_item_height"
                android:background="@color/white"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="@string/subnet_mask"
                    android:textColor="@color/black_text"
                    android:textDirection="locale"
                    android:textSize="@dimen/dimen_textsize_16sp" />

                <TextView
                    android:id="@+id/subnet_mask_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="12dp"
                    android:gravity="center_vertical"
                    android:text="0.0.0.0"
                    android:textDirection="locale"
                    android:textSize="@dimen/dimen_textsize_12sp"
                    tools:ignore="HardcodedText" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/background" />

            </com.hiber.tools.layout.PercentRelativeLayout>

            <com.hiber.tools.layout.PercentRelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/setting_item_height"
                android:layout_marginTop="30dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/web_manager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:drawableEnd="@drawable/right_arrow_small"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingLeft="12dp"
                    android:paddingEnd="12dp"
                    android:paddingRight="12dp"
                    android:text="@string/web_manager"
                    android:textColor="@color/black_text"
                    android:textDirection="locale"
                    android:textSize="@dimen/dimen_textsize_16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/background" />

            </com.hiber.tools.layout.PercentRelativeLayout>

            <com.hiber.tools.layout.PercentRelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/setting_item_height"
                android:background="@color/white">

                <TextView
                    android:id="@+id/quick_guide"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:drawableEnd="@drawable/right_arrow_small"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingLeft="12dp"
                    android:paddingEnd="12dp"
                    android:paddingRight="12dp"
                    android:text="@string/quick_guide_user_manual"
                    android:textColor="@color/black_text"
                    android:textDirection="locale"
                    android:textSize="@dimen/dimen_textsize_16sp" />

            </com.hiber.tools.layout.PercentRelativeLayout>

            <com.hiber.tools.layout.PercentRelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/setting_item_height"
                android:layout_marginTop="30dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingLeft="12dp"
                    android:paddingEnd="12dp"
                    android:paddingRight="12dp"
                    android:text="@string/app_version"
                    android:textColor="@color/black_text"
                    android:textDirection="locale"
                    android:textSize="@dimen/dimen_textsize_16sp" />

                <ImageView
                    android:id="@+id/iv_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dimen_8dip"
                    android:layout_toStartOf="@+id/app_version_txt"
                    android:src="@drawable/point_red"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/app_version_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="12dp"
                    android:gravity="center_vertical"
                    android:text="LINKHUB HH70"
                    android:textDirection="locale"
                    android:textSize="@dimen/dimen_textsize_12sp"
                    tools:ignore="HardcodedText" />

            </com.hiber.tools.layout.PercentRelativeLayout>
        </com.hiber.tools.layout.PercentLinearLayout>

        <!-- 等待 -->
        <com.alcatel.wifilink.root.widget.HH70_LoadWidget
            android:id="@+id/wd_about_load"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </com.hiber.tools.layout.PercentRelativeLayout>
</com.hiber.tools.layout.PercentLinearLayout>
