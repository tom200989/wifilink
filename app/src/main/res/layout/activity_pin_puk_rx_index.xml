<?xml version="1.0" encoding="utf-8"?>
<com.hiber.tools.layout.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context="com.alcatel.wifilink.root.ue.root_activity.PinPukIndexRxActivity">

    <!-- 标题栏 -->
    <com.hiber.tools.layout.PercentRelativeLayout
        android:id="@+id/rl_pinpuk_index_rx_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mg_blue"
        app:layout_heightPercent="9%h">

        <ImageView
            android:id="@+id/iv_pinpuk_index_rx_banner_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/back"
            app:layout_heightPercent="50%h"
            app:layout_widthPercent="50%h" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/sim_unlocked"
            android:textColor="@color/white"
            app:layout_textSizePercent="30%h" />

    </com.hiber.tools.layout.PercentRelativeLayout>

    <!-- framelayout -->
    <FrameLayout
        android:id="@+id/fl_pinpuk_index_rx"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_pinpuk_index_rx_banner" />

</com.hiber.tools.layout.PercentRelativeLayout>
