<?xml version="1.0" encoding="utf-8"?>
<com.hiber.tools.layout.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dip"
    android:paddingBottom="10dip" >
    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/connected_device"
        android:layout_margin="10dip"
        android:layout_centerVertical="true"
        android:contentDescription="@null" />
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_centerVertical="true"
	    android:layout_toRightOf="@id/icon"
	    android:layout_marginRight="10dip"
	    android:layout_toEndOf="@id/icon"
	    android:layout_marginEnd="10dip"
	    android:orientation="vertical" >
	    <TextView
	        android:id="@+id/device_description"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:maxWidth="115dip"
	        android:inputType="none"
	        android:text="super man"
			android:singleLine="true"
			android:textColor="@color/color_black"
	        android:textSize="16sp" />
	    <TextView
	        android:id="@+id/mac"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:textSize="14sp"
	        android:text="MAC:11:FF:FF:FF:FF"
	        android:textColor="@color/color_grey"/>
	</LinearLayout>
	<Button
        android:id="@+id/unblock_button"
        android:layout_width="85dip"
        android:layout_height="28dip"
        android:background="@drawable/selector_common_button"
        
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dip"
        android:layout_marginRight="10dip"
        android:text="@string/device_manage_unblock_btn"
        android:textSize="10sp"
        android:textColor="@color/color_white" />
</com.hiber.tools.layout.PercentRelativeLayout>
