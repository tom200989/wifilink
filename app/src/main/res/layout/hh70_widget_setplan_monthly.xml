<?xml version="1.0" encoding="utf-8"?>
<com.hiber.tools.layout.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.hiber.tools.layout.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_setPlan_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="@color/gray" />

        <com.hiber.tools.layout.PercentRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:gravity="center"
            app:layout_heightPercent="30%h"
            app:layout_widthPercent="85%w">

            <!-- 输入框 -->
            <com.hiber.tools.layout.PercentRelativeLayout
                android:id="@+id/rl_pop_setPlan_rx_monthly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_horizontal"
                app:layout_heightPercent="30%h">

                <EditText
                    android:id="@+id/et_pop_setPlan_rx_monthly_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/et_underline_settimelimit"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="number"
                    android:maxLength="4"
                    android:textColor="@color/black"
                    app:layout_heightPercent="90%h"
                    app:layout_textSizePercent="30%h"
                    app:layout_widthPercent="30%w" />

                <com.hiber.tools.layout.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/et_pop_setPlan_rx_monthly_num"
                    app:layout_heightPercent="90%h"
                    app:layout_widthPercent="30%w">

                    <TextView
                        android:id="@+id/tv_pop_setPlan_rx_monthly_mb"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/hh70_mb"
                        android:textColor="@color/mg_blue"
                        app:layout_textSizePercent="30%h" />

                    <TextView
                        android:id="@+id/tv_pop_setPlan_rx_monthly_gb"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/hh70_gb"
                        android:textColor="@color/gray"
                        app:layout_textSizePercent="30%h" />

                </com.hiber.tools.layout.PercentLinearLayout>

            </com.hiber.tools.layout.PercentRelativeLayout>

            <!-- 说明 -->
            <TextView
                android:id="@+id/tv_pop_setPlan_rx_blank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_pop_setPlan_rx_monthly"
                android:layout_centerHorizontal="true"
                android:text="@string/hh70_blank_data_unlimited"
                app:layout_marginTopPercent="2%h"
                app:layout_textSizePercent="8%h" />

            <com.hiber.tools.layout.PercentLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_pop_setPlan_rx_blank"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                app:layout_heightPercent="22%h"
                app:layout_marginTopPercent="10%h"
                app:layout_widthPercent="80%w">

                <TextView
                    android:id="@+id/tv_pop_setPlan_rx_monthly_cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_below="@id/tv_pop_setPlan_rx_blank"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/hh70_cancel"
                    android:textColor="@color/gray"
                    app:layout_textSizePercent="40%h" />

                <TextView
                    android:id="@+id/tv_pop_setPlan_rx_monthly_ok"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_below="@id/tv_pop_setPlan_rx_blank"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/hh70_ok"
                    android:textColor="@color/mg_blue"
                    app:layout_textSizePercent="40%h" />

            </com.hiber.tools.layout.PercentLinearLayout>

        </com.hiber.tools.layout.PercentRelativeLayout>

    </com.hiber.tools.layout.PercentRelativeLayout>

</com.hiber.tools.layout.PercentRelativeLayout>
