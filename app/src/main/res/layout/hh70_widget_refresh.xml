<?xml version="1.0" encoding="utf-8"?>
<com.hiber.tools.layout.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_refresh_getconnect_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:background="@color/gray" />

    <com.hiber.tools.layout.PercentRelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/white"
        app:layout_heightPercent="40%w"
        app:layout_widthPercent="80%w">

        <TextView
            android:id="@+id/tv_refresh_getconnect_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hh70_get_connect"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_marginPercent="4%w"
            app:layout_textSizePercent="12%h" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_refresh_getconnect_title"
            android:text="@string/hh70_make_sure_phone"
            android:textColor="@color/black"
            app:layout_marginLeftPercent="4%w"
            app:layout_marginRightPercent="4%w"
            app:layout_textSizePercent="10%h" />

        <TextView
            android:id="@+id/tv_refresh_getconnect_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:text="@string/hh70_ok"
            android:textColor="@color/main_title_background"
            android:textStyle="bold"
            app:layout_heightPercent="17%h"
            app:layout_marginPercent="4%w"
            app:layout_textSizePercent="10%h" />

    </com.hiber.tools.layout.PercentRelativeLayout>

</com.hiber.tools.layout.PercentRelativeLayout>
